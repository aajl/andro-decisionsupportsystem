<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input2" >
    
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
    		<TextView 
        	android:id="@+id/judul"
       	 	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="INPUT DATA SISWA"
        	android:layout_marginTop="10dp"
        	android:gravity="center_horizontal"/>
 
        <TextView 
            android:id="@+id/thn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahun Ajaran : "
            android:layout_below="@+id/judul"
            android:layout_marginLeft="10dp"/>
        
        <EditText 
            android:id="@+id/edthun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_toRightOf="@+id/thn"/>
        
        <TextView 
            android:id="@+id/kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas :"
            android:layout_below="@+id/judul"
            android:layout_toRightOf="@+id/thn"
            android:layout_marginLeft="80dp"/>
        
        <EditText 
            android:id="@+id/edkelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_toRightOf="@+id/kelas"/>
        
        <TextView 
            android:id="@+id/ns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Siswa"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/edthun"/>
        
        <EditText 
            android:id="@+id/edns"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/ns"/>
         
        <TextView 
            android:id="@+id/k1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rajin"
            android:layout_below="@+id/edns"
            android:layout_marginLeft="10dp"
            android:gravity="left"/>
        
        <EditText 
            android:id="@+id/edk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/k1"
            android:layout_alignLeft="@+id/k1"/>
        
        <TextView 
            android:id="@+id/k2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rapih"
            android:layout_toRightOf="@+id/k1"
            android:layout_below="@+id/edns"
            android:layout_marginLeft="50dp"/>
        
        <EditText 
            android:id="@+id/edk2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/k2"
            android:layout_alignLeft="@+id/k2"/> 
            
        <TextView 
            android:id="@+id/k3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sopan"
            android:layout_toRightOf="@+id/k2"
            android:layout_below="@+id/edns"
            android:layout_marginLeft="50dp"/>
        
        <EditText 
            android:id="@+id/edk3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/k3"
            android:layout_alignLeft="@+id/k3"/> 
            
        <TextView 
            android:id="@+id/k4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nilai"
            android:layout_below="@+id/edk1"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/edk1"/>
        
        <EditText 
            android:id="@+id/edk4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/k4"
            android:layout_alignLeft="@+id/k4"/> 
         
        <TextView 
            android:id="@+id/k5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perilaku"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/k4"
            android:layout_below="@+id/edk2"
            android:layout_marginLeft="50dp"/>
        
        <EditText 
            android:id="@+id/edk5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/k5"
            android:layout_alignLeft="@+id/k5"/>
        
        <Button 
            android:id="@+id/btbaru"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="BARU"
            android:layout_below="@+id/edk5"
            android:layout_marginTop="30dp"/>
        
         <Button 
            android:id="@+id/btsimpan"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="SIMPAN"
            android:layout_below="@+id/btbaru"/>
         
          <Button 
            android:id="@+id/btkemb"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="KEMBALI"
            android:layout_below="@+id/btsimpan"/>
          
        </RelativeLayout>
               
    </ScrollView>
    

</RelativeLayout>
